<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDetails.Materials.EditMaterial.EditMaterialActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/LayoutTitle"
            android:text="Edit Material" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                style="@style/EditTextTitle"
                android:text="Title:" />

            <EditText
                android:id="@+id/EditMaterial_Title_EditText"
                style="@style/EditTextStyle"
                android:hint="Material's title."
                android:inputType="textPersonName"
                android:maxLines="1" />

            <TextView
                style="@style/EditTextTitle"
                android:text="Content:" />

            <EditText
                android:id="@+id/EditMaterial_Content_EditText"
                style="@style/EditTextStyle"
                android:hint="Material's link."
                android:inputType="text"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/EditMaterial_Edit_Button"
                    style="@style/Button"
                    android:text="Edit"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:id="@+id/EditMaterial_Delete_Button"
                    style="@style/Button"
                    android:text="Delete" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>