<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity"
    android:background="@color/white"
    android:id="@+id/Main_Parent_Layout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/app_icon" />

            <TextView
                style="@style/EditTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not a member?" />

            <Button
                android:id="@+id/Main_SignUp_Button"
                style="@style/Button"
                android:layout_width="220dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp"
                android:text="Join Us Now!"
                android:textStyle="bold"
                android:background="@drawable/button_roundedcorners_accent"/>

            <TextView
                style="@style/EditTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already a Member?" />

            <Button
                android:id="@+id/Main_SignIn_Button"
                style="@style/Button"
                android:layout_width="220dp"
                android:layout_marginTop="0dp"
                android:text="Log in" />

            <TextView
                android:id="@+id/Main_Invite_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite your friends!"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>