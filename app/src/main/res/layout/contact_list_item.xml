<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_roundedcorners"
    android:padding="10dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/contact"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ContactListItem_invite_Button"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INVITE"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/ContactListItem_Name_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmed Nassar"
                android:maxLength="22"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/ContactListItem_Phone_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01063324525"
                android:maxLength="22"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/middlegrey"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/ContactListItem_Name_TextView"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>